@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", null, new { @class = "header-link-fontcolor" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="header-link-fontcolor">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("Register", "Account")" class="header-link-fontcolor">Register</a></li>
        <li><a href="@Url.Action("Login", "Account")" class="header-link-fontcolor">Log in</a></li>
    </ul>
}
